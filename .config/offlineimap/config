[general]
accounts = Namo,P1

# offlineimap recommands /not/ using threading.
# http://www.offlineimap.org/configuration/2016/01/29/why-i-m-not-using-maxconnctions.html
# and running separate instances instead.
maxsyncaccounts = 3
# maxconnections = 3
pythonfile = ~/.config/offlineimap/lib.py

ui = basic

[Account Gmail]
localrepository = LocalGmail
remoterepository = RemoteGmail

[Account Namo]
localrepository = LocalNamo
remoterepository = RemoteNamo

[Account P1]
localrepository = LocalP1
remoterepository = RemoteP1

[Repository LocalGmail]
type = Maildir
localfolders = ~/.Mail/Gmail

[Repository RemoteGmail]
type = Gmail
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = tpolge@gmail.com
remotepasseval = get_netrc_pass("imap.gmail.com")

[Repository LocalNamo]
type = Maildir
localfolders = ~/.Mail/Namo

[Repository RemoteNamo]
type = IMAP
remotehost = namo.thb.lt
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = thblt
remotepasseval = get_netrc_pass("namo.thb.lt")

[Repository LocalP1]
type = Maildir
localfolders = ~/.Mail/P1

[Repository RemoteP1]
type = IMAP
remotehost = imap.univ-paris1.fr
ssl = yes
remoteuser = tpolge
sslcacertfile = //etc/ssl/certs/ca-certificates.crt
remotepasseval = get_netrc_pass("imap.univ-paris1.fr")
