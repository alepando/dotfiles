execute pathogen#infect()
syntax on
filetype plugin indent on

set go-=T
"set bg=dark
"if &background == "dark"
"    hi normal guibg=black
"    set transp=0
"endif
colorscheme Tomorrow-Night
set guifont=Menlo:h14

""" Indenting
set autoindent
set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab
set smarttab

""" Menu
set wildmenu
set wildmode=list:longest,full

""" Editing visual aids
set number
set cursorline
set showmatch
set ruler
set nofoldenable
